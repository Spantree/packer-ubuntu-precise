          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "amazon-ebs": {
          "execute_command": "sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/puppet.sh",
        "scripts/chef.sh",
        "scripts/oraclejava7.sh",
        "scripts/librarian.sh",
        "scripts/hiera-eyaml.sh",
